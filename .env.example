# Environment mode: local | staging | prod
APP_ENV="local"

# Local Prisma Postgres URL from `npx prisma dev`
DATABASE_URL="postgresql://postgres:postgres@localhost:54322/postgres"

# Session secret (generate with: npx auth secret)
AUTH_SECRET="RANDOM_32_CHARACTER_STRING"

# Server-side peppers for hashing reset/rate-limit keys
RESET_CODE_PEPPER="CHANGE_ME_RESET_PEPPER"
RATE_LIMIT_PEPPER="CHANGE_ME_RATE_LIMIT_PEPPER"
